<UI>
	Screen:
        name: "Principal"
        BoxLayout:
            orientation: 'vertical'
            RelativeLayout:
                Label:
                    text: "BIENVENIDOS"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout
                rows: 2
                cols: 2
                padding: 10
                spacing: 10

                Button:
                    text: "Agregar"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Agregar" 
                Button:
                    text: "Actualizar"
                Button:
                    text: "Eliminar"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Eliminar" 
                Button:
                    text: "Listar"
            RelativeLayout:
                Button:
                    text: "Salir"
                    on_release: app.stop()
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }
              
	Screen:
		name: "Agregar"
		BoxLayout:
			orientation: "vertical"
			RelativeLayout:
                Label:
                    text: "Agregar empleado"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout:
                rows: 4
                cols: 2

                Label:
                    text: "Nombre"
                TextInput:
                    id: nombre
                    focus: True
                    multiline: False
                    hint_text: "Ingresar nombre"
                    input_filter: lambda text, from_undo: '' if not text.isalpha() else text
                    

                Label:
                    text: "Apellido"
                TextInput:
                    id: apellido
                    focus: True
                    multiline: False
                    hint_text: "Ingresar apellido"
                    input_filter: lambda text, from_undo: '' if not text.isalpha() else text

                Label:
                    text: "DNI"
                TextInput:
                    id: dni
                    focus: True
                    multiline: False
                    input_filter: "float"
                    hint_text: "Ingresar DNI"

                Label:
                    text: "Mail"
                TextInput:
                    id: mail
                    focus: True
                    multiline: False
                    hint_text: "Ingresar mail"
                    #input_filter: lambda text, from_undo: '' if not text.isalpha() else text

            RelativeLayout:
                Button:
                    text: "Agregar"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4 }
                    disabled: True if nombre.text == "" or apellido.text == "" or dni.text == "" or mail.text == "" else False
                    on_press:
                        app.root.AgregarEmpleado() if (app.root.error_vacios() == True) and (app.root.validardni() == True) else app.root.open_pop()
                        app.root.reset_text()
                Button:
                    text: "Volver"
                    on_press:
                        root.transition.direction = 'right'
                        root.current = "Principal"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }

    Screen:
		name: "Eliminar"
		BoxLayout:
			orientation: "vertical"
			RelativeLayout:
                Label:
                    text: "Eliminar empleado"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout
                rows: 1
                cols: 2
                padding: 10
                spacing: 10
                size_hint: (0.95, 0.20)
                pos_hint: {'center_x': 0.5}
                TextInput:
                    id: nombre
                    focus: True
                    multiline: False
                    hint_text: "Ingresar dni"
                    hint_text_align: "center"
                    valing: "middle"
                    halign: "center"
                    input_filter: "float"
                Button:
                    text: "Buscar"
    
            RelativeLayout:
                Button:
                    text: "Eliminar"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4 }
                    #on_press:
                        #app.root.AgregarEmpleado() if (app.root.error_vacios() == True) and (app.root.validardni() == True) else app.root.open_pop()
                        #app.root.reset_text()
                Button:
                    text: "Volver"
                    on_press:
                        root.transition.direction = 'right'
                        root.current = "Principal"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }
<MyPopup>
    id: pop1
    size_hint:.7,.7
    auto_dismiss: False
    title: "Error"

    Button:
        text: "El dni ya existe \n Ingresar otro nuevamente"
        halign: "center"
        on_press: pop1.dismiss()
