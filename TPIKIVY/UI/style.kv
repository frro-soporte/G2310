<UI>
	Screen:
        name: "Principal"
        BoxLayout:
            orientation: 'vertical'
            RelativeLayout:
                Label:
                    text: "BIENVENIDOS"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout
                rows: 2
                cols: 2
                padding: 10
                spacing: 10

                Button:
                    text: "Agregar"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Agregar" 
                Button:
                    text: "Actualizar"
                Button:
                    text: "Eliminar"
                Button:
                    text: "Listar"
            RelativeLayout:
                Button:
                    text: "Salir"
                    on_release: app.stop()
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }
              
	Screen:
		name: "Agregar"
		BoxLayout:
			orientation: "vertical"
			RelativeLayout:
                Label:
                    text: "Agregar empleado"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout:
                rows: 4
                cols: 2

                Label:
                    text: "Nombre:"
                TextInput:
                    id: nombre
                    focus: True
                    multiline: False
                    hint_text: "Ingresar nombre"
                    

                Label:
                    text: "Apellido:"
                TextInput:
                    id: apellido
                    focus: True
                    multiline: False
                    hint_text: "Ingresar apellido"

                Label:
                    text: "DNI:"
                TextInput:
                    id: dni
                    focus: True
                    multiline: False
                    input_filter: "float"
                    hint_text: "Ingresar DNI"

                Label:
                    text: "Mail:"
                TextInput:
                    id: mail
                    focus: True
                    multiline: False
                    hint_text: "Ingresar mail"

            RelativeLayout:
                Button:
                    text: "Agregar"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4 }
                    on_press:
                        app.root.AgregarEmpleado()
                        app.root.reset_text()

                Button:
                    text: "Volver"
                    on_press:
                        root.transition.direction = 'right'
                        root.current = "Principal"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }

	Screen:
		name: "Pantalla 3"
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: [0,0,0]
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: "Pantalla 3"
			Button:
				text: "Volver Pantalla 1"
				on_press:
					root.transition.direction = 'down'
					root.current = "Pantalla 1"
				size_hint: (0.3,0.1)
				pos_hint: {'center_x':0.5, 'center_y':0.5}