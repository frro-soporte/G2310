#:import Factory kivy.factory.Factory
<UI>
	Screen:
        name: "Principal"
        BoxLayout:
            orientation: 'vertical'
            RelativeLayout:
                Label:
                    text: "BIENVENIDOS"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout
                rows: 2
                cols: 2
                padding: 10
                spacing: 10

                Button:
                    text: "Agregar"
                    background_color: (0.5, 0.5, 0.5, 1)
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Agregar" 
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Actualizar"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Actualizar" 
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Eliminar"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Eliminar" 
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Mostrar Datos"
                    on_press:
                        root.transition.direction = "right"
                        root.current = "Mostrar"
            RelativeLayout:
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Salir"
                    on_release: app.stop()
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }
              
	Screen:
		name: "Agregar"
		BoxLayout:
			orientation: "vertical"
			RelativeLayout:
                Label:
                    text: "Agregar empleado"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout:
                rows: 4
                cols: 2

                Label:
                    text: "Nombre"
                TextInput:
                    id: nombre_agregar
                    focus: True
                    multiline: False
                    hint_text: "Ingresar nombre"
                    input_filter: lambda text, from_undo: '' if not text.isalpha() else text
                    

                Label:
                    text: "Apellido"
                TextInput:
                    id: apellido_agregar
                    focus: True
                    multiline: False
                    hint_text: "Ingresar apellido"
                    input_filter: lambda text, from_undo: '' if not text.isalpha() else text

                Label:
                    text: "DNI"
                TextInput:
                    id: dni_agregar
                    focus: True
                    multiline: False
                    input_filter: "float"
                    hint_text: "Ingresar DNI"

                Label:
                    text: "Mail"
                TextInput:
                    id: mail_agregar
                    focus: True
                    multiline: False
                    hint_text: "Ingresar mail"
                    #input_filter: lambda text, from_undo: '' if not text.isalpha() else text

            RelativeLayout:
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Agregar"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4 }
                    disabled: True if (nombre_agregar.text == "") or (apellido_agregar.text == "") or (dni_agregar.text == "") or (mail_agregar.text == "") else False
                    on_press:
                        tipo = "agregar"
                        app.root.open_confirmar(tipo, None) if (app.root.error_vacios() == True) and (app.root.validardni() == True) else app.root.open_pop1()
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Volver"
                    on_press:
                        tipo = "agregar"
                        app.root.reset_text(tipo)
                        root.transition.direction = 'right'
                        root.current = "Principal"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }

    Screen:
		name: "Eliminar"
		BoxLayout:
			orientation: "vertical"
			RelativeLayout:
                Label:
                    text: "Eliminar empleado"
                    font_size: '24sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
            GridLayout:
                rows: 1
                cols: 2
                padding: 10
                spacing: 10
                size_hint: (0.95, 0.35)
                pos_hint: {"center_x": 0.5, "top": 0.9}
                TextInput:
                    id: buscardni_eliminar
                    focus: True
                    multiline: False
                    hint_text: "Ingresar dni"
                    hint_text_align: "center"
                    valing: "middle"
                    halign: "center"
                    input_filter: "float"
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Buscar"
                    on_press:
                        state = "eliminar" 
                        result = app.root.BuscarEmpleado(buscardni_eliminar.text, state)
                        (app.root.open_pop2(), app.root.reset_text(state)) if result == False else app.root.disabled_eliminar()

            GridLayout:
                rows: 5
                cols: 2
                padding: -15
                spacing: 5
                size_hint: (0.80, 0.95)
                pos_hint: {"center_x": 0.51, "top": 0.9}
                Label:
                    text: ""
                Label:
                    text: ""
                
                Label:
                    id: nombre_sinbuscar_eliminar
                    text: ""
                Label:
                    id: nombre_buscado_eliminar
                    focus: True
                    multiline: False
                
                Label:
                    id: apellido_sinbuscar_eliminar
                    text: ""
                Label:
                    id: apellido_buscado_eliminar
                    focus: True
                    multiline: False

                Label:
                    id: dni_sinbuscar_eliminar
                    text: ""
                Label:
                    id: dni_buscado_eliminar
                    focus: True
                    multiline: False

                Label:
                    id: mail_sinbuscar_eliminar
                    text: ""
                Label:
                    id: mail_buscado_eliminar
                    focus: True
                    multiline: False

            RelativeLayout:
                Button:
                    id: boton_eliminar 
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Eliminar"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4 }
                    disabled: True if (buscardni_eliminar.text == "") or (dni_buscado_eliminar.text == "") or (buscardni_eliminar.text != dni_buscado_eliminar.text) else False
                    background_color: (0.5, 0.5, 0.5, 1)
                    on_press:
                        tipo = "eliminar"
                        app.root.open_confirmar(tipo, buscardni_eliminar.text) if (app.root.BuscarEmpleado(buscardni_eliminar.text,tipo) == True) else app.root.open_pop2()
                Button:
                    background_color: (0.5, 0.5, 0.5, 1)
                    text: "Volver"
                    on_press:
                        tipo = "eliminar"
                        app.root.reset_text(tipo)
                        app.root.transition.direction = 'right'
                        app.root.current = "Principal"
                    size_hint: (0.3, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2 }

